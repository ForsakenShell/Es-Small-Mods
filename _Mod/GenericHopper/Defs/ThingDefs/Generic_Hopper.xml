<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef Name="BuildingBase" Abstract="True">
        <category>Building</category>
        <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
        <selectable>true</selectable>
        <drawerType>MapMeshAndRealTime</drawerType>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <repairEffect>Repair</repairEffect>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <filthLeaving>BuildingRubble</filthLeaving>
    </ThingDef>

    <ThingDef Name="HopperBase" ParentName="BuildingBase" Abstract="True">
        <thingClass>Building_Storage</thingClass>
        <comps>
            <li>
                <compClass>esm.CompHopper</compClass>
            </li>
        </comps>
    </ThingDef>
    
    <ThingDef ParentName="HopperBase">
        <defName>GenericHopper</defName>
        <label>generic hopper</label>
        <graphicData>
            <texPath>Things/Building/Production/GenericHopper</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <altitudeLayer>Waist</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.5</fillPercent>
        <pathCost>70</pathCost>
        <building>
            <defaultStorageSettings>
                <priority>Important</priority>
                <filter>
                    <exceptedThingDefs>
                        <li>Human_Meat</li>
                    </exceptedThingDefs>
                </filter>
            </defaultStorageSettings>
        </building>
        <inspectorTabs>
            <li>ITab_Storage</li>
        </inspectorTabs>
        <castEdgeShadows>true</castEdgeShadows>
        <statBases>
            <WorkToMake>450</WorkToMake>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>1.0</Flammability>
        </statBases>
        <description>Holds resources for use by machines.</description>
        <costList>
            <Steel>15</Steel>
        </costList>
        <tickerType>Never</tickerType>
        <rotatable>true</rotatable>
        <neverMultiSelect>true</neverMultiSelect>
        <designationCategory>Production</designationCategory>
        <staticSunShadowHeight>0.3</staticSunShadowHeight>
        <surfaceType>Item</surfaceType>
        <placeWorkers>
            <li>esm.PlaceWorker_ConnectedToHopperAccepter</li>
        </placeWorkers>
        <constructEffect>ConstructMetal</constructEffect>
    </ThingDef>

</Defs>